<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des Utilisateurs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <h1>Hello</h1>
    <div id="users" class="container mt-3"></div>
    <script>

        function fetchData() {
            return fetch('http://127.0.0.1:5000/users')  // Assurez-vous que l'URL est correcte pour votre backend
                .then(response => response.json())
                .then(result => {
                    console.log(result);  // Vous devriez maintenant voir le contenu de l'objet incluant "message" et "data"
                    if (!Array.isArray(result.data)) {
                        throw new TypeError('Expected an array of users');
                    }
                    return result.data.map(user => transformUserData(user));  // Utilisez result.data pour accéder au tableau
                });
        }

        function transformUserData(user) {
            return {
                id: user.id,
                name: user.name,
                // Peut-être voulez-vous éviter d'afficher les mots de passe dans le frontend
                // Vous pouvez choisir de ne pas inclure la propriété password
            };
        }

        function generateUserHTML(user) {
            return `
        <div class="card my-2">
            <h5 class="card-header">User ID: ${user.id}</h5>
            <div class="card-body">
                <p class="card-text">Username: ${user.name}</p>
            </div>
        </div>
    `;
        }

        function renderUsers(users) {
            const usersHtml = users.map(user => generateUserHTML(user)).join('');
            document.getElementById('users').innerHTML = usersHtml;
        }

        document.addEventListener('DOMContentLoaded', () => {
            fetchData()
                .then(renderUsers)
                .catch(error => console.error('Error fetching data:', error));
        });

    </script>
</body>

</html>